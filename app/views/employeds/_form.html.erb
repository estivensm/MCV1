<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Crear Usuario</h4>
      </div>

  

<%= form_for(employed,multipart: true, remote: true) do |f| %>
  <div class="alert alert-danger" style="display:none">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">
<div class="row">
<div class="col-md-6">
<div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label :second_name %>
    <%= f.text_field :second_name , class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label :first_last_name %>
    <%= f.text_field :first_last_name, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label :second_last_name %>
    <%= f.text_field :second_last_name, class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label "email" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label :document_type %>
     <%= select_tag 'document_type', options_for_select(["C.C", "Pasaporte", "I.d"]), {:class => 'form-control'}%>
  </div>
  </div>
  <div class="col-md-6">
<div class="form-group">
    <%= f.label :document %>
    <%= f.text_field :document , class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date, class: "form-control" %>
  </div>

<div class="form-group">
    <%= label_tag "Genero" %><br />
 
    <%= select_tag 'genero', options_for_select(["Masculino", "Femenino", "Indeterminado"]), {:class => 'form-control'}%>
  </div>

 <div class="form-group">
    <%= f.label :cargo_id %>
   <%= f.select :cargo_id,
   Cargo.all.map { |u| [u.name, u.id] },
               { include_blank: false },
               { class: 'form-control' }
%>
    
  </div>


<%= f.hidden_field :admin_user , :value => current_user.id %>
  <%= f.hidden_field :user_id ,:value =>  current_user.id %>

  <div class="form-group">
    <%= f.label "avatar" %>
    <%= f.file_field :avatare , class: "form-control"%>
  </div>

</div>
</div>
  <div class="actions">
    <%= f.submit "Guardar", class: 'btn btn-primary'%>
  </div>
<% end %>
