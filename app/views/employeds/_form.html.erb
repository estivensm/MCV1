<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title"><%=action_type%> Empleado</h4>
      </div>




  

<%= form_for(employed,multipart: true, remote: true) do |f| %>
  <div class="alert alert-danger" style="display:none">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">
<div class="row">
<div class="col-md-6">
<div class="form-group">
    <%= f.label "Primer Nombre" %>
    <%= f.text_field :first_name, class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label "Segundo Nombre" %>
    <%= f.text_field :second_name , class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label "Primer Apellido" %>
    <%= f.text_field :first_last_name, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label "Segundo Apellido" %>
    <%= f.text_field :second_last_name, class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label "Email" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
<div class="form-group">
    <%= f.label "Tipo de Documento" %>
     <%= f.select 'document_type', options_for_select(["C.C", "Pasaporte", "I.d"]), {},{:class => 'form-control'}%>
  </div>
  </div>
  <div class="col-md-6">
<div class="form-group">
    <%= f.label "Documento" %>
    <%= f.text_field :document , class: "form-control"%>
  </div>

<div class="form-group">
    <%= f.label "Fecha de Nacimiento" %>
    <%= f.date_field :birth_date, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label "Genero" %><br />
 
    <%= f.select 'genero', options_for_select(["Masculino", "Femenino", "Indeterminado"]),{}, {:class => 'form-control'}%>
  </div>

 <div class="form-group">
    <%= f.label "Cargo" %>
   <%= f.select :cargo_id,
   Cargo.all.map { |u| [u.name, u.id] },
               { include_blank: false },
               { class: 'form-control' }
%>
    
  </div>


<%= f.hidden_field :admin_user , :value => current_user.admin_user %>
  <%= f.hidden_field :user_id ,:value =>  current_user.id %>

  <div class="form-group">
    <%= f.label "Foto" %>
    <%= f.file_field :avatare , class: "form-control"%>
  </div>

</div>
</div>
  <br>
<hr>
  <div class="form-group text-center">
   <%= f.submit "Guardar", class: 'btn btn-primary btnpad' %>
   <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  </div>
<% end %>
 </div>
  </div>
      </div>
 </div>