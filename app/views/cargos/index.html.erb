<div class = "row title-table">
   <div class = "col-md-10">
      <p >Cargos</p>
   </div>
   <div class = "col-md-2">
      <%= link_to 'Nuevo', new_cargo_path, remote: true, class: "btn btn-primary"  if current_user.rol == "SuperAdmin" %>
   </div>
</div>
<div class = "row">
   <div class = "col-md-6">
      <div class="form-group">
         <%= form_tag(cargos_path, :method => "get", id: "search-form") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Ingresa texto", class: "form-control search1" %>
         <%= submit_tag "Buscar", :class => "btn btn-primary" %>
         <% end %>
      </div>
   </div>
   <div class = "col-md-6">
      <%= will_paginate @cargos%>
   </div>
</div>
<div class = "row">
   <table class="table">
      <thead>
         <tr class = "tr-table">
         
         
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Proceso</th>
            <th colspan="3"></th>
         </tr>
      </thead>
      <tbody>
         <% @cargos.each do |cargo| %>
         <tr>
         
            <td><%= cargo.name %></td>
            <td><%= cargo.description %></td>
            <td><%= cargo.proceso.name if cargo.proceso != nil %></td>
            <td><%= link_to  cargo, :class => "opciones" do %>
               <i class="fa fa-eye" aria-hidden="true"></i>
               <% end %>
               <%= link_to  edit_cargo_path(cargo), remote:true, :class => "opciones" do %>
               <i class="fa fa-pencil" aria-hidden="true"></i>
               <% end %>
               <%= link_to cargo,  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
               <i class="fa fa-trash" aria-hidden="true"></i>
               <% end %>
            </td>
         </tr>
         <% end %>
      </tbody>
   </table>
</div>