      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riesgos.each do |riesgo| %>
      <tr>
        <td><%= riesgo.user_id %></td>
        <td><%= riesgo.admin_user %></td>

        <td><%= riesgo.descripcion %></td>
