<% if @riesgo.errors.blank? %>
  $('#contact-modal').modal('hide');
  $('table tbody').append('<%= j render "user_row", riesgo: @riesgo %>');
 $('.alert').remove();
<% else %>
$(".alert").css("display", "block");
  // TODO: show the errors in the UI
  $('.alert').empty('<p></p>');
  <% @riesgo.errors.full_messages.each do |msg| %>
          $('.alert').append('<p><%=msg%></p>');
        <% end %>
 
<% end %>