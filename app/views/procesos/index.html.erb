
<div class = "row title-table">
   <div class = "col-md-10">
      <p >Procesos</p>
   </div>
   <div class = "col-md-2">
      <%= link_to 'Nuevo', new_proceso_path, remote: true, class: "btn btn-primary"  if current_user.rol == "SuperAdmin" || current_user.rol == "Admin" %>
   </div>
</div>
<div class = "row">
   <div class = "col-md-6">
      <div class="form-group">
         <%= form_tag(procesos_path, :method => "get", id: "search-form") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Buscar", class: "form-control search1" %>
         <%= submit_tag "Search", :class => "btn btn-primary" %>
         <% end %>
      </div>
   </div>
   <div class = "col-md-6">
      <%= will_paginate @procesos%>
   </div>
</div>
<div class = "row">
   <table class="table">
      <thead>
         <tr class = "tr-table">
            <th>Nombre</th>
            <th>Descripcion</th|>
            <th>User</th>
            <th>Admin user</th>
            <th colspan="3"></th>
         </tr>
      </thead>
      <tbody>
         <% @procesos.each do |proceso| %>
         <tr>
            <td><%= proceso.name %></td>
            <td><%= proceso.description %></td>
            <td><%= proceso.user_id %></td>
            <td><%= proceso.admin_user %></td>
            <td><%= link_to  proceso, :class => "opciones" do %>
               <i class="fa fa-eye" aria-hidden="true"></i>
               <% end %>
               <%= link_to  edit_proceso_path(proceso), remote:true, :class => "opciones" do %>
               <i class="fa fa-pencil" aria-hidden="true"></i>
               <% end %>
               <%= link_to  proceso,  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
               <i class="fa fa-trash" aria-hidden="true"></i>
               <% end %>
            </td>
         </tr>
         <% end %>
      </tbody>
   </table>
</div>

