<script>
  $('.state1').change(function(){

             if ( $(this).is(':checked') )
    {
            $('.saccion').prop('checked', true);
            $('.scorrecion').prop('checked', true);
            $('.scausa').prop('checked', true);
            $('.spuede').prop('checked', false);
     
            
       }
        else{
              $('.saccion').prop('disabled', false);
            $('.scorrecion').prop('disabled', false);
            $('.scausa').prop('disabled', false);
            $('.spuede').prop('disabled', false);
   
          
         }
    });


</script>