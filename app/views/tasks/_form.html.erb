<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"> Tarea</h4>
      </div>
<%= form_for([ @report, @task]) do |f| %>
  <div class="alert alert-danger" style="display:none">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">

  <%= f.hidden_field :admin_user , :value => current_user.admin_user %>
  <%= f.hidden_field :report_id , :value => @report.id%>
  <%= f.hidden_field :user_id ,:value =>  current_user.id %>

 <%if action_name == "new"%>

 <div class="field">
    <%= f.label "Nombre" %>
    <%= f.text_field :name,  class: "form-control" %>
  </div>



   <div class="form-group">
               <%= f.label "Asignada a" %><br>
               <%= f.select :employed_id,
                 get_employeds.map { |u| ["#{u.first_name} #{u.second_name} ", u.id] },
                             { include_blank: true },
                             { class: 'chosen-select form-control ch'  }
                  %>
            </div>
 
   <div class="field">
    <%= f.label "Fecha de Compromiso" %>
    <%= f.date_field :f_compromiso,  class: "form-control" %>
  </div>

<%end%> 

  


 

<%if action_name == "edit"%>

<p><strong>Tarea:</strong> <%=@task.name%></p>

<div class="field">
    <%= f.label "Comentarios" %>
    <%= f.text_area :observacion,  class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :anexo %>
    <%= f.file_field :anexo,  class: "form-control" %>

  </div>
  <br>
  <div class="form-group">
                  <%= f.label "Cerrar" %>
                  <%= f.check_box :estado ,  class: "cierra1"  %>
               </div>


<%end%>

<br>
      
 

  <br>
<hr>
  <div class="form-group text-center">
   <%= f.submit "Guardar", class: 'btn btn-primary btnpad' %>
   <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  </div>
<% end %>


