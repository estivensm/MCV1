<%task = @task%>

 <div class="conteinter reporte cnt">
<div style="padding:20px" class="row">
    <div class="col-md-8 col-md-offset-2">
       <%= link_to "Volver a Accion", report_accion_path(task.report.id,task.accion.id), class:"linka" %>
    </div>
    <div class="col-md-8 col-md-offset-2" style="border: 1px solid #e2e2e2;
    padding: 20px;background: #f8f8f8;">
        <div class="col-md-7 rtd" >
               <h3 class = "linka "> <strong >Tarea <span style="font-size:16px;">(<%=  task.report.codigo  %>-<%=  task.codigo  %>)</span></strong> <br><br><%= task.name %></h3>
               <hr>
        </div>
        <div class="col-md-5 rtd text-right" >
              <h3 class = "linka "> 
               <%= link_to  edit_report_accion_task_path(@report,@accion,task) + "?tipo=do",remote:true, :class => "opciones" do %>
      <i class="fa fa-thumb-tack" style = "font-size:30px;" aria-hidden="true"></i>
      <% end %>
           <% if current_user.id == task.user_id%>
      <%= link_to  edit_report_accion_task_path(@report,@accion,task),remote:true, :class => "opciones" do %>
      <i class="fa fa-pencil" style = "font-size:30px;" aria-hidden="true"></i>
      <% end %>
      <%= link_to  report_accion_task_path(@report,@accion,task),  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
      <i class="fa fa-trash" style = "font-size:30px;" aria-hidden="true"></i>
      <% end %>
      <% end %>
              
          
      </h3>
            
        </div>
        <div class="col-md-12" style="margin-bottom: 10px;font-size: 13px" ></div>
            <%= render 'form_close', task: task %>
           <div class="col-md-12" style="margin-bottom: 10px;font-size: 13px" ><strong >Comentarios: </strong><%= task.observacion %></div>
           <div class="col-md-12" style="margin-bottom: 10px;font-size: 13px" ><strong><i class="fa fa-paperclip" aria-hidden="true"></i> Anexo: <%= (link_to "#{task.anexo.file.filename }  (Descargar)",task.anexo_url, class:"linka") if task.anexo_url %>
            
            <!--<a class="linka" href="https://docs.google.com/viewerng/viewer?url=<%=task.anexo_url%>" >(Ver)</a>-->
            </div>

            <div class="col-md-12 " style="margin-bottom: 10px;font-size: 13px">
               <strong><i class="fa fa-user" aria-hidden="true"> </i> Responsable :
                <%  
                  employed = Employed.find(task.employed_id)
                  %>
               <td  class = "imaacc">
                  <button type="button" style = "font-size:14px;" class="btn numerb" data-container="body" data-toggle="popover" data-placement="top" data-content="<p style='text-align:center;margin:0px;padding:0px;'><img src='<%= employed.avatare_url(:thumb) %>'></p><br><strong>Cargo:</strong> <%= employed.cargo.name %><br> <strong>Email:</strong> <%= employed.email%><br><strong>Cedula:</strong> <%= employed.document %>"><%= employed.first_name %> <%= employed.first_last_name %></button></strong>
            </div>
            <%color = ""
               task.contador_seg < 0 ?  color = "#d82c2c" : color = "#0db4a0"%>
            <div class="col-md-12" style="margin-bottom: 10px;font-size: 13px" ><strong><i class="fa fa-calendar" aria-hidden="true"></i>  Fecha de Compromiso:
            </strong> <%=  get_date(task.f_compromiso)  %></div><br>
            <div class="col-md-12 " style="margin-bottom: 10px;font-size: 13px" ><strong><strong>
            </strong><i class="fa fa-calendar-check-o" aria-hidden="true"></i> Fecha de Entrega: 
            <%=  get_date(task.f_real)  %> <%= (cumplio(task.cumplio).html_safe) if task.estado%></div>
            <div class="col-md-12 " style = "    font-size: 13px;
               color: gray;"></div>
    </div>
    <div class="col-md-6">
    <a href="<%=task.anexo_url%>" class="embed"></a>
    </div>



</div>
         </div>
    




