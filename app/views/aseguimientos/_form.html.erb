<div id="contact-modal" class="modal fade">
<div class="modal-dialog">
   <div class="modal-content modal-graph col-lg-12 col-xs-8 col-md-12">
      <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
         <h4 class="modal-title"><%= action_type %> Seguiemiento</h4>
      </div>
      <%= form_for([@report,@accion,@aseguimiento], remote: true) do |f| %>
      <div class="alert alert-danger" style="display:none">
         <ul>
         </ul>
      </div>
      <div class="modal-body">
       
              <p><strong>Accion: </strong><%=@accion.name%></p>
               <div class="form-group">
                  <%= f.label "Seguimiento" %>
                  <%= f.text_area :descripcion,  class: "form-control area" %>
               </div>
                <div class="form-group">
                  <%= f.label :evidencia %>
                  <div class="input-group">
                     <span class="input-group-addon" id="basic-addon1"><i class="fa fa-paperclip" aria-hidden="true"></i>
                     </span>
                     <%= f.file_field :evidencia,  class: "form-control " %>
                  </div>
               </div>
            
            <% if  get_employed1.id == @accion.employed_id || current_user.role == "SuperAdmin" %>
               <div class="form-group">
                  <%= f.label "Solicitar Cierre" %>
                  <%= f.check_box :s_cierre ,  class: ""  %>
               </div>

<% end %>
              
               <br>
               <% if @accion.cierra_id == get_employed1.id || current_user.role == "SuperAdmin"%>
               <div class="form-group">
                  <%= f.label :cierra %>
                  <%= f.check_box :cierra ,  class: "cierra1"  %>
               </div>
               <% end %>
               <div class="form-group cierra">
                  <%= f.label :eficaz %>
                  <%= f.check_box :eficaz  %>
               </div>
               <div class="form-group cierra">
                  <%= f.label "ConclusiÃ³n" %>
                  <%= f.text_area :conclucion ,  class: "form-control area"%>
               </div>
               <div class="form-group cierra ">
                  <%= f.label :costo %>
                  <div class="input-group">
                     <span class="input-group-addon" id="basic-addon1">$</span>
                     <%= f.number_field :costo , :value => 0,  class: "form-control"%>
                  </div>
               </div>
          
         <%= f.hidden_field :accion_id , :value => @accion.id %>
         <%= f.hidden_field :admin_user , :value => current_user.admin_user %>
         <%= f.hidden_field :user_id ,:value =>  current_user.id %>
         <br>
         <hr>
         <div class="form-group text-center">
            <%= f.submit "Guardar", class: 'btn btn-primary btnpad' %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
         </div>
         <% end %>
      </div>
   </div>
</div>
<script>
   $('.cierra').hide();
   $('.cierra1').change(function(){
   
   
              if ( $(this).is(':checked') )
     {
             $('.cierra').fadeIn();
             
        }
         else{
               
     $('.cierra').fadeOut();
           
          }
     });
   
   
</script>