
<div class="row" >
   <div class="col-md-12 ">
      <p><%= link_to "Inicio ",  root_path, :class => "linka" %> | <%= link_to "Normas",  normas_path, :class => "linka" %> </p>
   </div>
</div>
<div class = "row title-table">
   <div class = "col-md-6">
      <p>  Numerales de Norma  <span class="label label-primary"><%=@numerals.count%></span> <span style = "font-size:12px;margin-left:20px;"> <%= page_entries_info @numerals, :entry_name => 'Numerales' %></span> </p>


     
   </div>
   <div class = "col-md-4 paginate text-left title-table1">
     
<%= will_paginate @numerals%>
   </div>

   <div class = "col-md-2">
       <%= link_to 'Nuevo', new_norma_numeral_path, remote: true, class: "btn btn-primary"  if current_user.role == "SuperAdmin" ||  current_user.rol.configuracion %>
   </div>
</div>




<hr class="hr">
<%= (link_to "Filtros", norma_numerals_path(@norma) + "?filtros=true", class: "linka canf1") if params[:filtros] != "true" && params[:commit] != "Buscar"  %>
<%= (link_to "Cancelar Filtros",norma_numerals_path(@norma), class: "linka canf") if (params[:commit] || params[:filtros])  %>

<div class = "row busqueda" style="display:none">
   <div class = "col-md-9">
      <div class="form-group fil">
         <%= form_tag(norma_numerals_path(@norma), :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Numeral", class: "form-control search" %>
  <%= text_field_tag :search2, params[:search2], placeholder: "Nombre", class: "form-control search" %>
  <%= text_field_tag :search1, params[:search1], placeholder: "Descripción", class: "form-control search" %>

  
      
         <%= submit_tag "Buscar", :class => "btn btn-primary" %>
        
    
         <% end %>
      </div>
   </div>

</div>
<div class = "row">

<%= form_tag delete_numerals_path(@norma.id), method: :delete, data: { confirm: 'Esta seguro de eliminar estas Normas' } do %>
<p><%= submit_tag "Eliminar", class: "btn btn-danger" %></p>
   <table class="table">
      <thead>
         <tr class = "tr-table">
          <th class="text-left" style="width: 5%"><%= check_box_tag "all_id", 0 %></th>
            <th>Numeral</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th colspan="3"></th>
         </tr>
      </thead>
      <tbody>
         <% @numerals.each do |numeral| %>
         <tr>
         <td><%= check_box_tag "numeral_ids[]", numeral.id ,false ,class:"ck"%></td>
            <td><%= numeral.numeral %></td>
            <td><%= numeral.name %></td>
   
            <td><div class="descnum"><%== numeral.description %></div></td>
            <td><%= link_to norma_numeral_path(@norma,numeral), :class => "opciones" do %>
               <i class="fa fa-eye" aria-hidden="true"></i>
               <% end %>
               <%= link_to  edit_norma_numeral_path(@norma,numeral), remote:true, :class => "opciones" do %>
               <i class="fa fa-pencil" aria-hidden="true"></i>
               <% end %>
               <%= link_to  norma_numeral_path(@norma,numeral),  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
               <i class="fa fa-trash" aria-hidden="true"></i>
               <% end %>
            </td>
         </tr>
         <% end %>
      </tbody>
   </table>

   <%end%>
</div>


