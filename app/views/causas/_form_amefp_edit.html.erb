<div id="contact-modal" class="modal fade">
   <div class="modal-dialog modal-lg">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Configuracion General AMEF</h4>
         </div>
         
         <div class="alert-warning text-center" style = "padding:15px;">
  <strong>¡ RECUERDA QUE AL MODIFICAR LOS DATOS, DEBES ACTUALIZAR EL CUADRO DEL AMEF !</strong>
</div>
         <%= form_tag update_amefp_path(@amefp.id), method: :patch, remote:true do %>

         <div class="alert alert-danger" style="display:none;padding: 10px;">
            <ul>
            </ul>
         </div>
         <div class="modal-body">
            <div class="row">
               
               <div class="col-md-8">
                  <div class="form-group">
                     <%= label_tag "Observaciones" %>
                     <%= text_area_tag :descripcion, @amefp.descripcion , class: "form-control formus" %>
                  </div>
               </div>
                 <div class="col-md-4">
     <div class="form-group">
    <%= label_tag "NPR Tague(%)" %>
    <%= number_field_tag :npr_tage, @amefp.npr_tage, class: "form-control formus" %>
  </div>
  </div>
            </div>
            <div class="row">
            <h4 class="color-gray">Primera Valoración</h4>
            <div class="col-md-1">
                 <%= hidden_field_tag :p_valoracion, true%>
               </div>
               <div class="col-md-3">
                  <div class="form-group">

                     <%= label_tag "Fecha Valoracion" %>
                     <%= date_field_tag :frp_valoracion, @amefp.frp_valoracion , class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-2">
                  <div class="form-group">
                     <%= label_tag "Gravedad" %>
                     <%= number_field_tag :p_valor,@amefp.p_valor , class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group">
                     <%= label_tag "Descripcion" %>
                     <%= text_area_tag :dp_valoracion,@amefp.dp_valoracion , class: "form-control formus"%>
                  </div>
               </div>
            </div>
                   <div class="row">
            <h4 class="color-gray">Segunda Valoración</h4>
            <div class="col-md-1">
                  <div class="form-group">
                  <%= label_tag "Habilitar" %><br>
                  <%=  check_box_tag :s_valoracion , 1 ,@amefp.s_valoracion%>

               </div>
               </div>
               <div class="col-md-3">
                  <div class="form-group">
                     <%= label_tag "Fecha Valoracion" %>
                     <%= date_field_tag :frs_valoracion, @amefp.frs_valoracion , class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-2">
                  <div class="form-group">
                     <%= label_tag "Gravedad" %>
                     <%= number_field_tag :s_valor, @amefp.s_valor , class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group">
                     <%= label_tag "Descripcion" %>
                     <%= text_area_tag :ds_valoracion, @amefp.ds_valoracion , class: "form-control formus"%>
                  </div>
               </div>
            </div>
                   <div class="row">
            <h4 class="color-gray">Tercera Valoración</h4>
            <div class="col-md-1">
                  <div class="form-group">
                  <%= label_tag "Habilitar" %><br>
                  <%= check_box_tag :t_valoracion, 1 , @amefp.t_valoracion  %>
               </div>
               </div>
               <div class="col-md-3">
                  <div class="form-group">
                     <%= label_tag "Fecha Valoracion" %>
                     <%= date_field_tag :frt_valoracion, @amefp.frt_valoracion, class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-2">
                  <div class="form-group">
                     <%= label_tag "Gravedad" %>
                     <%= number_field_tag :t_valor, @amefp.t_valor , class: "form-control formus"%>
                  </div>
               </div>
               <div class="col-md-6">
                  <div class="form-group">
                     <%= label_tag "Descripcion" %>
                     <%= text_area_tag :dt_valoracion, @amefp.dt_valoracion , class: "form-control formus"%>
                  </div>
               </div>
            </div>
         </div>
       
         <br>
         <div class="modal-footer text-center">
            <%= submit_tag "Guardar", class: 'btn btn-primary btnpad' %>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
         </div>
         <% end %>
      </div>
   </div>
</div>
</div>