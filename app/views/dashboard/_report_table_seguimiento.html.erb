<div class="panel panel-default" style="    border-bottom: 3px solid #aeaeae;
   border-radius: 0 0 10px 10px;">
   <div class="panel-heading">
  <div class="row">
    <div class="col-md-10">
           <strong><span style="font-size:16px;color:#0db497"><%=report.codigo%>:</span> <%=report.description%></strong><br>
      <span><strong>Proceso: </strong><%=report.proceso.name%></span>
      <span><strong>Fuente: </strong><%=report.source_parent.name%></span>
      <span><strong>Tipo: </strong><%=report.source.name%></span>
        
    </div>

    <div class="col-md-2">
      <%= link_to "Ir al Reporte" ,report_path(report.id), class: "btn btn-primary", style: "float:right;"%>
    </div>

   </div>

    
   </div>

   <div class="panel-body">
     
      
      <%
         correciones = report.accions.where(tipo: "Correcion").abiertas.where(employed: @employed.id).where(" fp_seguimiento < ? ", Time.now)
         acciones = report.accions.where(tipo: "Accion").abiertas.where(employed: @employed.id).where(" fp_seguimiento < ? ", Time.now)
         actividades = report.accions.where(tipo: "Actividad").abiertas.where(employed: @employed.id).where(" fp_seguimiento < ? ", Time.now)
         
         %>
    <div class="alert alert-info" style="display: <%= correciones.count > 0 ? "inline-block" : "none"%>">  
          Correciones pendientes de tu seguimiento
          <%if correciones.proximas.count > 0 %>
           <i class="fas fa-exclamation-triangle" style="font-size:16px;color:orange;" ></i> <span class="badge-orange"> <%= correciones.proximas.count  %></span>
           <%end%> 
             <%if correciones.vencidas.count > 0 %>
            <i class="fas fa-exclamation-triangle" style="font-size:16px;color:#c32626;" ></i><span class="badge-red">  <%= correciones.vencidas.count  %></span>
            <%end%>
      </div>
         
  

  <div class="alert alert-info" style="display: <%= acciones.count > 0 ? "inline-block" : "none"%>">  
          Acciones  pendientes de tu seguimiento
          <%if acciones.proximas.count > 0 %>
           <i class="fas fa-exclamation-triangle" style="font-size:16px;color:orange;" ></i> <span class="badge-orange"> <%= acciones.proximas.count  %></span>
           <%end%> 
             <%if acciones.vencidas.count > 0 %>
            <i class="fas fa-exclamation-triangle" style="font-size:16px;color:#c32626;" ></i><span class="badge-red">  <%= acciones.vencidas.count  %></span>
            <%end%>
      </div>


       <div class="alert alert-info" style="display: <%= actividades.count > 0 ? "inline-block" : "none"%>">  
          Actividades  pendientes de tu seguimiento
          <%if actividades.proximas.count > 0 %>
           <i class="fas fa-exclamation-triangle" style="font-size:16px;color:orange;" ></i> <span class="badge-orange"> <%= actividades.proximas.count  %></span>
           <%end%> 
             <%if actividades.vencidas.count > 0 %>
            <i class="fas fa-exclamation-triangle" style="font-size:16px;color:#c32626;" ></i><span class="badge-red">  <%= actividades.vencidas.count  %></span>
            <%end%>
      </div>
      






      


<a class="btn btn-primary" style="float:right" role="button" data-toggle="collapse" href="#collapseExample<%=report.id%>" aria-expanded="false" aria-controls="collapseExample">
  Ver Pendientes
</a>

<div class="collapse" id="collapseExample<%=report.id%>">
  <div class="well">
   <div class="alert" >
  
  <h3 style="color:gray;margin:0px;">Gestion</h3>
  <div class="row">
      <div class="col-md-12">
         <table class="table tl">
            <thead>
               <tr>
                  <th style="width: 150px">Fecha de Compromiso</th>
                  <th style="width: 250px">Descripción</th>
                  <th>Responsable</th>
                  
                  <th>Días para cierre</th>
                  <th>Seguimiento</th>
                  <th>Link</th>
               </tr>
            </thead>
            <tbody>
               <% report.accions.abiertas.where(employed: @employed.id).where("fp_seguimiento < ? ", Time.now).where.not(f_seguimiento: 0).each do |accion| %>
               <%clase = ""
                  accion.contador_seg < 0 ?  clase = "vencidob" : clase = "proximob"
                  clase = "vigenteb" if accion.contador_seg > 5 %>
               <tr>
                  <td class="<%=clase%>"><%=accion.f_compromiso%></td>
                  <td class="text-left"><strong><%=accion.tipo%>: </strong><%=accion.name%></td>
                  <td><%=accion.employed.first_name%> <%=accion.employed.first_last_name%></td>
                  
                  <td><%=accion.contador_seg%></td>
                  <td><%if accion.f_seguimiento != 0%>
                     <% time = "" 
                        if accion.f_seguimiento != 0 && accion.fp_seguimiento != nil
                         if accion.fp_seguimiento > Time.now 
                               
                                   time = "" 
                            
                            else 
                        
                              time = " Pendiente"
                         end
                          else
                            time = ""   
                        end  
                        %>
                     <span><%=get_date(accion.fp_seguimiento)%><%=time%></span>
                     <%else%>
                     Sin frecuencia de Seguimiento 
                     <%end%>
                  </td>
                  <td><a href="/reports/<%=report.id%>/accions/<%=accion.id%>"><i class="fa fa-eye" aria-hidden="true" style="font-size:20px;"></i> Ir a la <%=accion.tipo%></a></td>
               </tr>
               <%end%>
            </tbody>
         </table>
      </div>
   </div>
  
  
</div>
  </div>
</div>





</div>
</div>

