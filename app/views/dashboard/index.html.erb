            <div class="col-md-3 rtd"><strong><i class="fa fa-calendar" aria-hidden="true"></i> Entrega</strong></div>
            <div class="col-md-3 rtd"><strong>Asigno:</strong> </div>
            <div class="col-md-6 rtd"><strong>Descripcion:</strong></div>
         </div>
         <div class="descnum1">
             <%if @reports.count > 0 %>
            <% @reports.each do |report|%>
            <%= link_to report_path(report) do %>
            <div class="row rtr rtr1">
               <%employed = Employed.find(report.employed_reporta)%>
               <%color = ""
                  report.contador_seg < 0 ?  color = "#d82c2c" : color = "orange"%>
               <div class="col-md-3 rtd fc1" style= "background:<%=color%>;color:white"><%=get_date(report.f_compromiso)%></div>
               <div class="col-md-3 rtd"><%=get_employed(employed.email).first_name%> <%=get_employed(employed.email).first_last_name%></div>
               <div class="col-md-6 rtd"><%=report.name%></div>
            </div>
            <%end%>
            <%end%>
            <%else%>
               <p class="nh">No hay Reportesw Proximos a Vencer ni Vencidos</p>
               <%end%>
         </div>
      </div>
   </div>
