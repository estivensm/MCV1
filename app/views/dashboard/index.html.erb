<script >
   Highcharts.chart('container', {
   
       chart: {
           type: 'column'
       },
   
       title: {
           text: 'Mi Actividad por mes'
       },
   
       xAxis: {
           categories: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo']
       },
   
       yAxis: {
           allowDecimals: false,
           min: 0,
           title: {
               text: 'Cantidad'
           }
       },
   
       tooltip: {
           formatter: function () {
               return '<b>' + this.x + '</b><br/>' +
                   this.series.name + ': ' + this.y + '<br/>' +
                   'Total: ' + this.point.stackTotal;
           }
       },
   
       plotOptions: {
           column: {
               stacking: 'normal'
           }
       },
   
       series: [ {
           name: 'Joe',
           data: [3, 4, 4, 2, 5],
           stack: 'male'
       }, {
           name: 'Jane',
           data: [2, 5, 6, 2, 1],
           stack: 'female'
       }]
   });
   
   
   
</script>

