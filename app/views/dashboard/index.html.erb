            <% @reports.each do |report|%>
          
          <%= render "reporte", report: report, employed_p: report.employed_reporta, desc: "Asignado por" %>
            
            <%end%>
            <%else%>
               <p class="nh">No hay Reportes</p>
               <%end%>
         </div>
      </div>
