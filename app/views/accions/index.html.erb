<div class="row">
   <div class="col-md-12 ">
      <p><%= link_to "Inicio /",  root_path, :class => "linka" %>  <%= link_to "Reportes /",  reports_path, :class => "linka" %>  <%= link_to "Reporte (#{@report.codigo})",  @report, :class => "linka" %></p>
   </div>
</div>
<div class = "row">
<div class="col-md-5 wihtout-padding">
<h3 class = "linka htitle text-center">Reporte</h3>
<div class="conteinter reporte cnt">
   <div class="row rtr">
      <div class="col-md-6 rtd text-left"><strong>Codigo:</strong> <%= @report.codigo %></div>
      <div class="col-md-6 rtd text-left"><strong>Fuente:</strong> <%= @report.source.name %></div>
      <% employed = Employed.find(@report.employed_id)%>
      <div class="col-md-6 rtd text-left"><strong>Responsable: </strong><button type="button" class="btn numerb" data-container="body" data-toggle="popover" data-placement="top" data-content="<p style='text-align:center;margin:0px;padding:0px;'><img src='<%= employed.avatare_url(:thumb) %>'></p><br><strong>Cargo:</strong> <%= employed.cargo.name %><br> <strong>Email:</strong> <%= employed.email%><br><strong>Cedula:</strong> <%= employed.document %>"><%= employed.first_name %> <%= employed.first_last_name %></button></div>
      <div class="col-md-6 rtd text-left"><strong>Estado: </strong><%= @report.state %></div>
      <div class="col-md-6 rtd text-left"><strong>Compromiso:</strong> <%= get_date(@report.f_compromiso) %></div>
   </div>
   <hr style = "margin:0px">
   <div class="row">
      <!--<div class="col-md-12 rtd"><strong>Descripcion</strong></div>-->
      <div class="col-md-12 rtd text-left"> <strong>Descipción Corta</strong>: <%= @report.name%></div>
      <div class="col-md-12 rtd text-left">
         <div class="descnum"><strong>Descripción Detallada</strong>: <%= @report.description%></div>
      </div>
   </div>
</div>

</div>
<div class="col-md-7 wihtout-padding">
<div class="conteinter htitle" style = "padding:0px">
   <div class="row rtr">
      <div class="col-md-2 rtd"></div>
      <div class="col-md-8 rtd">
         <h3 class="linka margin-cero"><%=@tipo + "es"%> (<%=@accions.count %>)</h3>
      </div>

<% if @accions.count > 0 %>
      <div class="col-md-2 rtd"><%= (link_to "Nueva #{@tipo}", new_report_accion_path(@report) + "?tipo=#{@tipo}", :class => 'btn btn-primary pull-right') if view_report(@report) || (!view_report(@report) &&  myproces_report(@report)) %></div><%end%>
   </div>

<% if @accions.count > 0 %>



</div>

<% @accions.each do |accion| %>
<div class="col-md-12 text-right" style = "padding-left: 40px !importan;padding-top: 0px !important;
   padding-bottom: 0px !important;   padding-right: 40px !important;">
   <%= link_to  edit_report_accion_path(@report,accion), :class => "opciones" do %>
   <i class="fa fa-pencil" aria-hidden="true"></i>
   <% end %>
   <%= link_to  report_accion_path(@report,accion),  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
   <i class="fa fa-trash" aria-hidden="true"></i>
   <% end %>
</div>
<%= link_to  report_accion_path(@report,accion) do %>
<div class="conteinter reporte cnt">
   <div class="row rtr">
      <div class="col-md-2 rtd"><strong>Creacion:</strong> <%=  get_date(accion.created_at)  %></div>
      <div class="col-md-2 rtd"><strong>Codigo:</strong> <%=  accion.codigo  %></div>
      <div class="col-md-2 rtd">
         <strong>Responsable:</strong> <%  
            employed = Employed.find(accion.employed_id)
            %>
         <td  class = "imaacc">
            <button type="button" class="btn numerb" data-container="body" data-toggle="popover" data-placement="top" data-content="<p style='text-align:center;margin:0px;padding:0px;'><img src='<%= employed.avatare_url(:thumb) %>'></p><br><strong>Cargo:</strong> <%= employed.cargo.name %><br> <strong>Email:</strong> <%= employed.email%><br><strong>Cedula:</strong> <%= employed.document %>"><%= employed.first_name %> <%= employed.first_last_name %></button>
      </div>
      <div class="col-md-2 rtd"><strong>Compromiso:</strong> <%=  get_date(accion.f_compromiso)  %></div>
      <div class="col-md-3 rtd text-right"><%if accion.estado == "Abierta"  %>
      <i style = "font-size:20px"  class="fa fa-unlock" aria-hidden="true"></i>
      <%else%>
      <i  style = "font-size:20px" class="fa fa-lock" aria-hidden="true"></i>
      <%end%>
      </div>
   </div>
   <div class="row rtr">
   <div class="col-md-8 rtd text-left"><strong>Acción: </strong> <%= accion.name %></div>
   <div class="col-md-4 rtd text-left"><strong>Posible Evidencia: </strong> <%= accion.evidencia %>
   </div>
   </div>
</div>
<% end %>
<% end %>
<%else%>
<div class="jumbotron jumbacc">
<h3 class="display-3 text-gray">No se ha creado ninguna <%= @tipo%></h3>
<hr class="my-4">
<%= (link_to "Nueva #{@tipo}", new_report_accion_path(@report) + "?tipo=#{@tipo}", :class => 'btn btn-primary btn-lg') if view_report(@report) || (!view_report(@report) &&  myproces_report(@report)) %>
</p>
<%end%>
</div>
</div>

<style>
.imaacc img
{
border-radius: 40px;
}
</style>
