<div class="row">
   <div class="col-md-6 ">
      <p><%=  link_to "Inicio /",  root_path, :class => "linka" %>  <%= show_reports ? (link_to "Reportes",  reports_path, :class => "linka"):(link_to "Reportes",  misreports_path, :class => "linka")  %></p>
   </div>
   <div class="col-md-6 text-right">
      <p>
         <%= link_to  edit_report_path(@report), :class => "opciones2" do %>
         <i class="fa fa-pencil" aria-hidden="true"></i>
         <% end %>
