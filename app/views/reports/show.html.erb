      <%else%>
      No hay archivo
      <%end%>
   </div>
</div>   
   <hr>
   <div class="row rtr">
      <!--<div class="col-md-12 rtd"><strong>Descripcion</strong></div>-->
      <div class="col-md-6 rtd text-left"> <strong>Requisito Legal y/o Interno:</strong>: <%= @report.requisito%></div>
            <div class="col-md-4 rtd text-left">
              <strong>Requisito Aplicable:</strong> <% @report.numerals.each do |numr|%>
              <!-- Large modal -->
              <button class="btn numerb" id = "<%=numr.id%>" data-toggle="modal" data-target="#myModal" value="<%=numr.description%>"><%= numr.norma_name%>-<%= numr.numeral%>-<%= numr.name%></button>
              <!-- Modal -->
              <br>
              <%end%></strong> 
              <script>
                  $('.numerb').click(function(){
                  a = $(this).prop('value');
                  b = $(this).text();
                  
