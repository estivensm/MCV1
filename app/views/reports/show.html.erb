                  $('.modalp1').text(b);
                  
                  });
                  
                    
              </script>
              <div class="modal fade" id="myModal" role="dialog">
                  <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal">&times;</button>
                          <h4 class="modal-title modalp1">Modal Header</h4>
                        </div>
                        <div class="modal-body">
                          <p class = "modalp"></p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                  </div>
              </div>
            </div>
       </div>
</div>

<div class="row flujo">
   <div class="col-md-3">
      <div class="panel panel-default">
         <div class="panel-heading">Correcciones (<%=@correa + @correc%>)</div>
         <div class="panel-body">
            <%if @report.source.correccion && @report.accion == "Si" %>
            <p class="color-gray">Tienes <%=@correa%> <%=@correa == 1 ? "Correccion Abierta" : "Correcciones Abiertas"%>
            </p>
            <p class="color-gray">Tienes <%=@correc%> <%=@correc == 1 ? "Correccion Cerrada" : "Correcciones Cerradas"%></p>
            <p class="text-right"> <%= link_to  "Ver",report_correcciones_path(@report) , class: 'btn btn-primary'%></p>
            <%else%>
            <p class="color-gray">Este Reporte no necesita Correcciones </p>
            <% end %>
         </div>
      </div>
   </div>
   <div class="col-md-3">
      <div class="panel panel-default">
         <div class="panel-heading">Analisis de Causa</div>
         <div class="panel-body">
            <%if @report.source.causa && @report.accion == "Si"%>
            <% if @report.causas.count == 0 %>
            <p class="color-gray">No se ha creado el Analisis de Causa</p>
            <%= (link_to  "Crear",  new_report_causa_path(@report), remote: true , class: 'btn btn-primary') if view_report(@report)%>
            <%else%>
            <p class = "color-gray"><%= @report.causas.last.tipo%></p>
            <p class="text-right"> <%= link_to  "Ver",report_causa_path(@report,@report.causas.last.id) , class: 'btn btn-primary'%></p>
            <%end%>
            <%else%>
            <p class="color-gray">Este Reporte no necesita Analisis de Causa </p>
            <% end %>
         </div>
      </div>
   </div>
   <div class="col-md-3">
      <div class="panel panel-default">
         <div class="panel-heading">Acciones (<%=@accionsca + @accionscc%>)</div>
         <div class="panel-body">
            <%if @report.source.accion && @report.accion == "Si"%>
            <p class="color-gray">Tienes <%=@accionsca%> <%=@accionsca == 1 ? "Accion Abierta" : "Acciones Abiertas"%>
            </p>
            <p class="color-gray">Tienes <%=@accionscc%> <%=@accionscc == 1 ? "Accion Cerrada" : "Acciones Cerradas"%>  </p>
            <p class="text-right"><%= link_to  "Ver", report_accions_path(@report) , class: 'btn btn-primary'%>
            <p>
               <%else%>
            <p class="color-gray">Este Reporte no necesita Acciones </p>
            <%end%>
         </div>
      </div>
   </div>
   <div class="col-md-3">
      <div class="panel panel-default">
         <div class="panel-heading">Seguimientos(<%=@seguimientos.count%>)</div>
         <div class="panel-body">
            <p class="text-right"><%= link_to  "Ver", report_seguimientos_path(@report) , class: 'btn btn-primary'%>
            <p>
         </div>
      </div>
   </div>
</div>




