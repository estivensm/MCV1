.info
{
  border:1px solid #cecece;
}
 .table1
    {

        color: #7a7a7a;
        font-size:12px;
        padding-left: 20px;
    padding-right: 20px;
    



    }
  .table1 td, th
  {
        padding: 6px 20px;
    
  }
