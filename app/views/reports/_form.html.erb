function get_source(b)
{
  

  $.get("/sourcee/" + b, function(data) {
        
         
             if (data.tipo == "Externa")
           
            {
              
              $('.cli').show();
              $('.pru').show();
             
            }
            else
            {
              $('.pru').hide();
              $('.cli').hide();
            }
            
            if (data.evidencia)
            {
              $('.evi').fadeIn();
              
            }
            else
            {
              $('.evi').fadeOut();
              
            }
            if (data.requisito)
            {
              $('.req').fadeIn();
              
            }
            else
            {
              $('.req').fadeOut();
              
            }
            if (data.evidencia)
            {
              $('.num').fadeIn();
              
            }
            else
            {
              $('.num').fadeOut();
              
            }

    });
}




