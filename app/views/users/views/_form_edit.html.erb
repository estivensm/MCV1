<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Editar Usuario</h4>
      </div>
<%= form_tag update_user_path, remote: true  do %>
  <div class="alert alert-danger" style="display:none">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">

   <h3 class = "color-gray"><%=@user.email%></h3> 
   <p class = "color-gray">Para editar el Email debes hacerlo por Empleado</p>   
   <br>
    <div class="form-group">
    <%= label_tag "Rol" %><br>
   <%=select_tag 'rol_id', options_from_collection_for_select(Rol.all , "id", "name", @user.rol.id),{class: "form-control cs1" }%>
  </div>

  



<p></p>


    <div class="form-group">
    <%= label_tag "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= password_field_tag :password,nil,  class: "form-control formus" %>
  </div>
  <div class="field">
    <%= label_tag "Confirmar Contraseña" %><br />
    <%= password_field_tag :password_confirmation, nil ,class: "form-control formus" %>
  </div>
<%= hidden_field_tag :admin_user ,current_user.id %>
<%= hidden_field_tag :role ,"Basico" %>
<%= hidden_field_tag :id ,@user.id %>
<%= hidden_field_tag :email ,@user.email %>
<%= hidden_field_tag :employed_id ,@user.employed_id %>


<br>

      <div class="modal-footer text-center">
       
        <%= submit_tag "Guardar", class: 'btn btn-primary btnpad' %>
         <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
<% end %>
    </div>
  </div>
</div>
    
 <script>
  

  $('.cs1').chosen(
        {

          allow_single_deselect: true,
          no_results_text: 'No hay resultados',
          width: '538px;',
          placeholder_text_single: "Seleccione una opción",
          placeholder_text_multiple: "Seleccione una varias opciones"

        });

  
  
</script>

<style type="text/css" media="screen">
  

@media (max-width: 900px) {
   .chosen-container
  {

    width: 200px !important;
  }
}

</style>