<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="container" style="margin-top: 70px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="thumbnail"><br>
       <p class = "logop" style = "color:#9a9a9a;"><img style= "width:40px;" id="slack" src="https://c1.staticflickr.com/5/4184/34455208672_b8f967e15e_o.png"> Mejora<span>App</span></p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %><br>

    <h4 class="text-center linka" style="color:gray; font-weight: bold">¿Olvidaste tu contraseña?</h4><br>

      <p class="text-center linka" style="color:gray">Ingresa tu email para enviarte las instrucciones</p><br>

        <div class="col-md-12" style="padding: 0px;">
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-at" style="color: #fff;"></i></span>
               <%= f.email_field :email, class: "form-control  required", :title => "Es un Campo Obligatorio", id: "cambio2", placeholder:"Email" %>
            </div>
            <br>
         </div>

      <br>
          <div class="actions" >
            <%= button_tag type: 'submit', class: "btn btn-primary btn-block", id: "register-button" , style:"font-size:18px;"  do %>
                <i class="fas fa-sign-in-alt"> </i> Enviar
            <% end %>
          </div>

      <div class="row">
          <div class="col-md-10 col-md-offset-1 text-center color-gray" style="margin-top:10px; margin-bottom: 10px; padding: 0px;">
          Ya estas Registrado <%= link_to "Inicia Sesión", new_session_path(resource_name), class: "iniciar" %> <br />
        </div>
        </div>

          </div>
      <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>


