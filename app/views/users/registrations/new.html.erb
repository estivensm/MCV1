<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

<div class="container" style="margin-top: 20px;">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="thumbnail"><br>
          <p class = "logop" style = "color:#9a9a9a;"><img style= "width:40px;" id="slack" src="https://c1.staticflickr.com/5/4184/34455208672_b8f967e15e_o.png"> Mejora<span>App</span></p>
          <br>

         <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <% if  devise_error_messages? %>
             <div class="alert alert-danger alert-devise">
             <%= devise_error_messages!  %></div>
          <% end %>

        <div class="col-md-12" style="padding: 0px;height: 70px;">
          <%= f.label "Usuario" %>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-user" style="color: #fff;"></i></span>
               <%= f.text_field :name, :class => "form-control required", :title => "Es un Campo Obligatorio" %>
            </div>
            <br>
         </div>

        <div class="col-md-12" style="padding: 0px; height: 70px;">
           <%= f.label "Email" %>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-at" style="color: #fff;"></i></span>
               <%= f.text_field :name, :class => "form-control required", :title => "Es un Campo Obligatorio" %>
            </div>
            <br>
         </div>

        <div class="col-md-12" style="padding: 0px; height: 70px;">
          <%= f.label "Empresa" %>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-users" style="color: #fff;"></i></span>
              <%= f.text_field :company , :class => "form-control required", :title => "Es un Campo Obligatorio"%>
            </div>
            <br>
         </div>

        <div class="col-md-12" style="padding: 0px; height: 70px;">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-key" style="color: #fff;"></i></span>
               <%= f.password_field :password, autocomplete: "off" , :class => 'form-control', id: "field"%>
            </div>
            <br>
         </div>

          <div class="col-md-12" style="padding: 0px; height: 70px;">
            <%= f.label "Confirmar Contrase침a" %>
            <div class="input-group">
                <span class="input-group-addon"><i class="fas fa-key" style="color: #fff;"></i></span>
               <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control'%>
            </div>
         </div>



          <%= f.hidden_field :role, :value => "SuperAdmin" %>


          <div class="actions" >
            <%= button_tag type: 'submit', class: "btn btn-primary btn-block", id: "register-button" , style:"font-size:18px;"  do %>
                <i class="fas fa-sign-in-alt"> </i> Registrarse
            <% end %>
          </div>

          <br>
        <div class="row" style="margin-bottom: 20px;">
          <div class="col-md-10 col-md-offset-1 text-center color-gray" style="margin-top:5px; padding: 0px;">
            Ya estas Registrado? <%= link_to "Inicia Sesi칩n", new_session_path(resource_name), class: "iniciar" %><br />
          </div>
        </div>

        <% end %>
      </div>   
    </div>
