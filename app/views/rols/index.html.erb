<div class = "row title-table">
   <div class = "col-md-10">
      <p >Roles</p>
   </div>
   <div class = "col-md-2">
      <%= link_to 'Nuevo', new_rol_path,remote:true  ,class: "btn btn-primary"  if current_user.role == "SuperAdmin" %>
   </div>
</div>
<div class = "row">
   <div class = "col-md-6">
      <div class="form-group">
         <%= form_tag(rols_path, :method => "get", id: "search-form") do %>
         <%= text_field_tag :search, params[:search], placeholder: "Ingresa texto", class: "form-control search1" %>
         <%= submit_tag "Buscar", :class => "btn btn-primary" %>
         <% end %>
      </div>
   </div>
   <div class = "col-md-6">
      <%= will_paginate @rols%>
   </div>
</div>
<div class = "row">
   <table class="table">
      <thead>
         <tr class = "tr-table">
     
      <th>Nombre</th>
      <th>Configuracion</th>
      <th>Ver Reportes</th>
      <th>Ver por Proceso</th>
      <th>Crear Reportes</th>
      <th>Editar Reportes</th>
      <th>Borrar Reportes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rols.each do |rol| %>
      <tr>
        <td><%= rol.name %></td>
        <td><%= get_state(rol.configuracion).html_safe %></td>
        <td><%= get_state(rol.report_ver).html_safe  %></td>
        <td><%= get_state(rol.report_procesos).html_safe  %></td>
        <td><%= get_state(rol.report_crear).html_safe  %></td>
        <td><%= get_state(rol.report_edit).html_safe  %></td>
        <td><%= get_state(rol.report_delete).html_safe  %></td>
        <td><%= link_to  rol, :class => "opciones" do %>
               <i class="fa fa-eye" aria-hidden="true"></i>
               <% end %>
               <%= link_to  edit_rol_path(rol), remote:true, :class => "opciones" do %>
               <i class="fa fa-pencil" aria-hidden="true"></i>
               <% end %>
               <%= link_to  rol,  method: :delete, data: { confirm: 'Are you sure?' }, :class => "opciones" do %>
               <i class="fa fa-trash" aria-hidden="true"></i>
               <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

