<script type="text/javascript">
window.onload = function () {
    var chart = new CanvasJS.Chart("chartContainer",{
       
        axisY: {
            title: "Frecuencia",                   
        },
        axisY2: {
            title: "Porcentaje Acumulado",
            gridColor: "blue",
            valueFormatString: "0'%'"
        },
        data: [
        {
        type: "column",
        dataPoints: [
    

                    <% CausaEfecto.where(causa_id:@causa.id).order(frecuencia: :desc).each do |causa|%>
                { label: "<%=causa.name%>", y: parseFloat("<%=causa.frecuencia%>") },
               <%end%>
            ]
        }
        ]
    });

    chart.render();
    createPareto(chart);    

    function createPareto(chart){
        var dps = [];
        var yValue, yTotal = 0, yPercent = 0;

        for(var i = 0; i < chart.data[0].dataPoints.length; i++)
            yTotal += chart.data[0].dataPoints[i].y;

        for(var i = 0; i < chart.data[0].dataPoints.length; i++){
            yValue = chart.data[0].dataPoints[i].y;
            yPercent += (yValue / yTotal * 100);
            dps.push({label: chart.data[0].dataPoints[i].label, y: yPercent});
        }
        chart.addTo("data",{type:"line", yValueFormatString: "0'%'", dataPoints: dps});
        chart.data[1].set("axisYType", "secondary");
        chart.axisY[0].set("maximum", 90);
        chart.axisY2[0].set("maximum", 110);
    }
}
</script>
<script type="text/javascript" src="/assets/script/canvasjs.min.js"></script>

<div id="chartContainer" style="height: 300px; width: 100%;"></div>


